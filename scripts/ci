set -e

if [ -z "$ARCH" ]; then
  echo "platform not specified for running tests. Exiting."
  exit 1
fi

cd $(dirname $0)

./build_binaries
./build_debug_binaries
# currently tests are run only for amd64
if [ ${ARCH} == "linux_amd64" ]; then
  ./prepare_test
  ./validate
fi

./package
./package_debug
